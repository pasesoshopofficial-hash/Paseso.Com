rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Posts images - authenticated users can read and upload
    match /posts/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Stories images - authenticated users can read and upload
    match /stories/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Avatars - authenticated users can read and upload
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}